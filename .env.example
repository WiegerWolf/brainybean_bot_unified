# Required - Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=
OPENAI_API_KEY=
WHITELIST=  # Comma-separated list of allowed Telegram user IDs

# Optional - Model Configuration
MODEL=google/gemini-2.5-flash-image-preview:free
OPENAI_BASE_URL=https://openrouter.ai/api/v1  # Or https://api.openai.com/v1 for OpenAI

# Optional - Database Configuration
DATABASE_URL=./data/bot.db  # SQLite database file path

# Optional - Feature Flags
ENABLE_STREAMING=true  # Stream responses for better UX
ENABLE_TOOLS=true      # Enable function calling/tools
ENABLE_VOICE=true      # Enable voice message processing

# Optional - Logging
LOG_LEVEL=info  # Options: debug, info, warn, error