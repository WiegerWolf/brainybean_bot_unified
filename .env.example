# Required - Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here
WHITELIST=123456789,987654321  # Comma-separated list of allowed Telegram user IDs

# Optional - Model Configuration
MODEL=gpt-4o  # Options: gpt-4o, gpt-4-turbo, gpt-3.5-turbo, claude-3-opus, etc.
OPENAI_BASE_URL=https://api.openai.com/v1  # Or https://openrouter.ai/api/v1 for OpenRouter

# Optional - Database Configuration
DATABASE_URL=./data/bot.db  # SQLite database file path

# Optional - Feature Flags
ENABLE_STREAMING=true  # Stream responses for better UX
ENABLE_TOOLS=true      # Enable function calling/tools
ENABLE_VOICE=true      # Enable voice message processing

# Optional - Logging
LOG_LEVEL=info  # Options: debug, info, warn, error